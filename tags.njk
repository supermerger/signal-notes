---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
eleventyComputed:
  title: "Tagged {{ tag }}"
permalink: false
---
{# permalink: /tags/{{ tag | slug }}/ #}
<h4 class="centered"><span class="tag-name-title">{{ tag }}</span></h4>

{% set postslist = collections[ tag ] %}
{% include "postslist.njk" %}

<p class="centered"><a href="{{ '/tags/' | url }}">ALL TAGS</a></p>
