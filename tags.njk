---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slug }}/
---
<div class="centered">
<a href="{{ tagUrl | url }}" class="post-tag post-tag-xl">{{ tag }}</a>
</div>

{% set postslist = collections[ tag ] %}
{% include "postslist.njk" %}

<p class="centered"><a href="{{ '/tags/' | url }}">ALL TAGS</a></p>
