---
layout: layouts/base.njk
templateClass: tmpl-haiku
---


{%- for tag in tags | filterTagList -%}
{%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
<a href="{{ tagUrl | url }}" class="post-tag ">{{ tag }}</a>
{%- endfor %}

<title>{{ title }}</title>


<div class="haiku">
  {{ content | safe }}
</div>

{%- if collections.posts %}
{%- set nextPost = collections.posts | getNextCollectionItem(page) %}
{%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
<br>
<br>
<br>
<br>
<div class="post-footer">
  <div class="prev-post">{%- if previousPost %}&#9194; <a class="" href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>{% endif %}</div>
  <div class="next-post">{%- if nextPost %}<a class="" href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a> &#9193;{% endif %}</div>
</div>
{%- endif %}
{%- endif %}
